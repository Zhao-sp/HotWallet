<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1F2633"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1F2633">

        <TextView
            android:id="@+id/fhgx"
            android:layout_width="37dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="3dp" />

        <ImageView
            android:id="@+id/fanhui5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/name1"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:background="@drawable/fanhui" />

        <TextView
            android:id="@+id/name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="投资"
            android:textColor="#fff"
            android:textSize="17sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/tz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#273040">

        <ImageView
            android:id="@+id/image"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/eth" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/image"
            android:text="ETH-Ethereum"
            android:textColor="#ffffffff"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/fxtoken1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/image"
            android:text="发行总Token:"
            android:textColor="#ffffffff"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/fxtoken"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/fxtoken1"
            android:text="20000"
            android:textColor="#ffffffff"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tztoken1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fxtoken"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/image"
            android:text="可投资Token:"
            android:textColor="#ffffffff"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tztoken"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fxtoken"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/tztoken1"
            android:text="19900"
            android:textColor="#ffffffff"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/cdname1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tztoken"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/image"
            android:text="承当者:"
            android:textColor="#66ffffff"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/cdname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tztoken"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/cdname1"
            android:text="宝瑞通典当行"
            android:textColor="#66ffffff"
            android:textSize="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="98dp" />

    </RelativeLayout>

    <EditText
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/cj"
        android:inputType="number"
        android:hint="请输入投资金额"
        android:textColorHint="#808080"
        android:textColor="#808080" />

    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/lanyabg"
        android:text="确认"
        android:textColor="#fff"
        android:textSize="16dp" />

</LinearLayout>