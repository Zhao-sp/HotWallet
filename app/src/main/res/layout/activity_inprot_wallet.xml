<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#1F2633">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:text="@string/selete2"
        android:textColor="#fff"
        android:textSize="18dp"
        android:gravity="center_horizontal" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_inprot_mnemonic"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="助记词导入"/>
        <Button
            android:id="@+id/btn_inprot_keystore"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="keystore导入"/>
        <Button
            android:id="@+id/btn_inprot_key"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="私钥导入"/>
    </LinearLayout>

        <EditText
            android:id="@+id/et_data_inprot"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:textColorHint="#fff"
            android:textColor="#fff"
            android:hint="请输入助记词或者keystore或者私钥，如果导入keystore则需要输入原始密码"/>


        <EditText
            android:id="@+id/et_pwd"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textColorHint="#fff"
            android:textColor="#fff"
            android:inputType="numberPassword"
            android:hint="请输入8位数以上密码"/>

    </LinearLayout>



</android.support.constraint.ConstraintLayout>